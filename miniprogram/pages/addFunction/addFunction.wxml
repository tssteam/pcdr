<!--pages/addFunction/addFunction.wxml-->
<!--个人信息界面-->
<form bindsubmit="formSubmit">
  <view class="container">

    <view>
      <image src="cloud://anglfs-5f307e.616e-anglfs-5f307e/logo.jpg"></image>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">姓名</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name="name" placeholder="请输入姓名" value="{{ userinfoFormData.name }}" />


      </view>
    </view>



    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type='number' name="phone" placeholder="请输入手机号码" value="{{ userinfoFormData.number }}" />


      </view>
    </view>



    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">微信号</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name="wxname" placeholder="可以有效避免骚扰电话" value="{{ userinfoFormData.wxname }}" />


      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">所在省份</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name="prov" placeholder="请输入省份" value="{{ userinfoFormData.prov }}" />


      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">所在城市</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name="city" placeholder="请输入城市" value="{{ userinfoFormData.city }}" />


      </view>
    </view>
  </view>


  <view class="btn-area">
    <button type='primary' formType="submit">提交</button>
  </view>
</form>