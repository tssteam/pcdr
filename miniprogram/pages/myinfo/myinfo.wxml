<!--pages/myinfo/myinfo.wxml-->
<form bindsubmit="formSubmit">
<view class="weui-cells weui-cells_after-title">
<view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">微信号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="wxname" placeholder="请输入出发地" value='wxname'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">

           
               
            </view>
  <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">出发地</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input"
                     type="text"  bindtap='city' value='{{city}}'
                     name="out" placeholder="请选择出发地" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
            </view>


 <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">出发地备注</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="outname" placeholder="请输入备注信息" value='Manhattan'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
            </view>



              <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">目的地</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="incar" 
                    bindtap='city1' 
                    placeholder="请选择目的地"
                     value='{{city1}}'
                     />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
               
            </view>

 <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">目的地备注</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="inname" placeholder="请输入备注信息" value='Manhattan'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
            </view>

<view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">日期</view>
                </view>
                <view class="weui-cell__bd">
                      <picker mode="multiSelector" name="time" value="{{dateTime}}" bindchange="changeDateTime" class="weui-input" bindcolumnchange="changeDateTimeColumn" range="{{dateTimeArray}}">
      {{dateTimeArray[0][dateTime[0]]}}-{{dateTimeArray[1][dateTime[1]]}}-{{dateTimeArray[2][dateTime[2]]}} {{dateTimeArray[3][dateTime[3]]}}{{dateTimeArray[4][dateTime[4]]}}
  </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
               
            </view>









             <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">人数</view>
                </view>
                <view class="weui-cell__bd">
                 <picker  class="weui-input" bindchange="bindPickerChange" name="site"  value="{{index}}" range="{{array}}">
{{array[index]}}</picker>
 
                  
                </view>
            </view>
 
 
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>       
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="phone"  type='number'  placeholder="请输入手机号码" value='15220229042'/>
                </view>
            </view>
 
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="username" placeholder="请输入姓名" value='anglfs-le' />
                </view>
            </view>
            
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">性别</view>
                </view>
                <view class="weui-cell__bd">
                   <checkbox-group class="weui-input" 
          name="sex"
           bindchange="checkboxChange">
  <label class="checkbox">
    <checkbox value='男' />男
    <checkbox value='女'   />女
   
  </label>
</checkbox-group>
                </view>

            </view>

              <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">类型</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="cartype" value='{{cartype}}'/>
                </view>
                <view class="weui-cell__ft">
                       <switch checked bindchange='switchChange1'/>
                </view>
            </view>
 
      

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">备注</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="beizhu"  placeholder="宠物，吸烟，行李" value='' />
                </view>
            </view>


        </view>

        <view class="btn-area">

         <button type='primary' formType="submit">提交</button>
         </view>
        </form>