<!--item1-5之类都是查看订单页面分别对应着mypage传过来的ID所查看的信息页面-->
<view class='container' wx:for="{{list}}" style='display:block;'>
  <view class='item'>
    <view class='left'>名字</view>
    <view class='right'>{{list.username}}</view>
  </view>
  <view class='item'>
    <view class='left'>电话</view>
    <view class='right'>{{list.phone}}</view>
  </view>
  <view class='item'>
    <view class='left'>价格</view>
    <view class='right'>{{list.price}}\t元</view>
  </view>
  <view class='item'>
    <view class='left'>订单号</view>
    <view class='right'>{{list._id}}</view>
  </view>
  <view class='item'>
    <view class='left'>出发地</view>
    <view class='right'>{{list.out}}</view>
  </view>
   <view class='item'>
    <view class='left'>出发地备注</view>
    <view class='right'>{{list.outname}}</view>
  </view>
  <view class='item'>
    <view class='left'>目的地</view>
    <view class='right'>{{list.incar}}</view>
  </view>
  <view class='item'>
    <view class='left'>目的地备注</view>
    <view class='right'>{{list.inname}}</view>
  </view>
  <view class='item'>
    <view class='left'>人数</view>
    <view class='right'>{{list.site}}</view>
  </view>
    <view class='item'>
    <view class='left'>微信名</view>
    <view class='right'>{{list.wxname}}</view>
  </view>
  <view class='on'> <button class='onr' bindtap='onRemove'>删除订单</button>
   <button class='onr1' bindtap='onfin'>订单完成</button></view>
 
</view>
